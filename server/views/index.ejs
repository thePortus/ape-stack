<!DOCTYPE html>
<html ng-app="ape.app">
    <head>
        <title>APE-Stack Server</title>
        <meta name="viewport" content="width=device-width", initial-scale=1.0 />
        <link rel="stylesheet" href="/fonts/fonts.css" />
        <!-- Vendor and internal CSS -->
        <% assets.css.forEach((asset) => { %><link rel="stylesheet" href="<%= asset %>">
        <% }) %>
        <!-- LESS stylesheets for development mode -->
        <% assets.less.forEach((asset) => { %><link rel="stylesheet/less" href="<%= asset %>">
        <% }) %>
    </head>
    <body ng-controller="mainController as vm" layout-fill>
        <div layout="row">
            <div class="appContainer" layout="column">
                <ape-site-header></ape-site-header>
                <div ui-view flex></div>
            </div>
            <ape-user-panel class="userPanel"></ape-user-panel>
        </div>
        <% assets.js.forEach((asset) => { %><script type="text/javascript" src="<%= asset %>"></script>
        <% }) %>
    </body>
</html>
