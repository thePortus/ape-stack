<!DOCTYPE html>
<html lang="en" ng-app="ape.app">
    <head>
        <title>APE-Stack Server</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0 shrink-to-fit=no"/>
        <!-- TODO ADD PROGRAMATIC FONT RETRIEVAL/HOSTING THROUGH GULP OR NPM STRICTS -->
        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
        <!-- Vendor and internal stylesheets -->

        <% assets.styles.css.forEach((asset) => { %><link rel="stylesheet" type="text/css" href="<%= asset %>">
        <% }) %>
        <!-- Less stylesheets if in development mode -->

        <% assets.styles.less.forEach((asset) => { %><link rel="stylesheet/less" type="text/css" href="<%= asset %>">
        <% }) %>

    </head>
    <body ng-controller="mainController as vm" layout-fill>
        <div layout="row">
            <div class="appContainer" layout="column">
                <ape-site-header></ape-site-header>
                <div ui-view flex></div>
            </div>
            <ape-user-panel class="userPanel"></ape-user-panel>
        </div>
        <!-- Vendor and internal scripts -->
        <% assets.scripts.forEach((asset) => { %><script type="text/javascript" src="<%= asset %>"></script>
        <% }) %>
    </body>
</html>
